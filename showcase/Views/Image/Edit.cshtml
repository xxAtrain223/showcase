@model showcase.Models.Image

@{
    ViewData["Title"] = "Edit";
}

@section head  {
    <style>
        .card-img-top {
            min-height: 1px; /*IE bug workaround*/
        }
    </style>
}

<h1>Edit Image</h1>

<form asp-action="Edit">
    <div class="card text-dark">
        <input asp-for="Id" type="hidden" />
        <img asp-for="@Model" class="card-img-top" />
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="AltText" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <textarea asp-for="AltText" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Save" />
            <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>