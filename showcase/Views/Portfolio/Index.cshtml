@model List<showcase.Models.PortfolioEntry>

@{
    ViewData["Title"] = "Index";
}

@section head {
    <style>
        .card-body img {
            max-width: 10rem;
            max-height: 10rem;
        }
    </style>
}

@foreach (PortfolioEntry entry in Model)
{
    <div class="card text-dark my-3">
        <div class="card-header">
            <h2 class="mt-0">@entry.Title - <a asp-action="Show" asp-route-id="@entry.Id">Full Project</a></h2>
        </div>
        <div class="card-body clearfix">
            <img asp-for="entry.Image" class="img-thumbnail float-left mr-1 mb-0" />
            @Html.Raw(entry.ShortDescription)
        </div>
    </div>
}